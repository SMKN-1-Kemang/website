{# section berita #}
<section class="section-berita mt-5">
    <div class="container">
        <h2 class="py-3 text-center text-md-start">Berita Terbaru</h2>
        <div class="row mt-5">
            {%- for news in collections.featured | reverse -%}
                <div class="col-12 col-md-6 col-lg-4" data-aos="fade-right">
                    {% set title = news.data.title %}
                    {% set image = news.data.image %}
                    {% set imageAlt = news.data.imageAlt %}
                    {% set description = news.data.description %}
                    {% set author = news.data.author %}
                    {% set date = news.date %}
                    {% set url = news.url %}
                    {% include 'snippet.njk' %}
                </div>
            {%- endfor -%}
        </div>
        <div class="row mb-5">
            <div class="col d-flex justify-content-center">
                <a href="/berita" class="btn btn-primary lainya-btn shadow-sm" data-aos="fade-right">Lainya</a>
            </div>
        </div>
    </div>
</section>

{# Additional Script #}
<script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@latest/dist/js/splide.min.js"></script>
<script>
	new Splide( '.splide' , {
        perPage: 3,
        breakpoints: {
            '640': {
                perPage: 2,
                gap    : '1rem',
            },
            '480': {
                perPage: 1,
                gap    : '1rem',
            },
        }
    }).mount();
</script>