---
layout: base.njk
additionalScript: <script type='text/javascript' src='https://platform-api.sharethis.com/js/sharethis.js#property=60dd412979f93f0012fe5540&product=inline-share-buttons' async='async'></script>
---

{# Page Component #}

{# Judul #}
<h2 class="text-center judul mt-5 mt-md-5 mb-3">
    {{ title }}
</h2>

<section class="section-content img-fluid">
    <div class="container">
        <div class="row">
            <div class="col d-flex align-items-center justify-content-center">
                <p class="m-0 text-muted">
                    Dipublish pada {{ date | dateFilter }}
                </p>
            </div>
        </div>
        <div class="row d-flex justify-content-center mt-4 mt-md-5">
            <div class="col-11 col-xl-8 border rounded shadow-sm px-3 px-lg-5 py-3 py-md-5">
                {{ content | safe }}
            </div>
        </div>
        <div class="row d-flex justify-content-center mt-4">
            <div class="col-11 col-md-8 border rounded shadow-sm py-3 px-3 px-md-4">
                <div class="sharethis-inline-share-buttons"></div>
            </div>
        </div>
    </div>
</section>